<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main button color (slightly darker to simulate press) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/minebutton_color_darker" /> <!-- Define this color in colors.xml -->
        </shape>
    </item>
    <!-- Inner shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="270"
                android:startColor="#40000000"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>