<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Shadow -->
            <item android:left="1dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="#20000000" /> <!-- Semi-transparent black for shadow -->
                </shape>
            </item>
            <!-- Glowing border -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="@color/background_card" />
                    <stroke android:width="2dp" android:color="@color/accent_color" /> <!-- Glowing border -->
                </shape>
            </item>
            <!-- Light sheen/gradient (conceptual) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <gradient
                        android:angle="270"
                        android:startColor="#1AFFFFFF"
                        android:centerColor="#00FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item>
                <layer-list>
                    <!-- Shadow -->
                    <item android:left="1dp" android:top="2dp">
                        <shape android:shape="rectangle">
                            <corners android:radius="16dp" />
                            <solid android:color="#20000000" /> <!-- Semi-transparent black for shadow -->
                        </shape>
                    </item>
                    <!-- Background with blur effect (conceptual, actual blur handled by code) -->
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/background_card" />
                            <corners android:radius="16dp" />
                            <stroke android:width="1dp" android:color="#33FFFFFF" /> <!-- Subtle border -->
                        </shape>
                    </item>
                    <!-- Light sheen/gradient (conceptual) -->
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="16dp" />
                            <gradient
                                android:angle="270"
                                android:startColor="#1AFFFFFF"
                                android:centerColor="#00FFFFFF"
                                android:endColor="#00FFFFFF"
                                android:type="linear" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </ripple>
    </item>
</selector>
