<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light or not? -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/background_status_bar</item>
        <item name="android:navigationBarColor">@color/background_app</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="LauncherFragment_Divider">
        <item name="android:layout_width">@dimen/padding_tiny</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="LauncherMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="LauncherMenuButton.Universal" parent="LauncherMenuButton">
        <item name="android:layout_height">66dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/padding_heavy</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_heavy</item>
        <item name="android:paddingEnd">@dimen/padding_heavy</item>
        <item name="android:stateListAnimator">@anim/button_press_animation</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ThickDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <item name="dimension_tracker" type="id" />
    <style name="DimensionTracker">
        <item name="android:id">@id/dimension_tracker</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
